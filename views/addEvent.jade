extends layout

block content
    .container
        h3 Add Event
        .row
            form.col.s12(role='form', action="/login", method="post")
                .row
                    .input-field.col.s8.m7
                        input(type='text', id="event_name" name="name" required=true)
                        label(for="event_name") Event Name
                    .input-field.col.s8.m7
                        textarea.materialize-textarea(id="details" name="details" required=true style="min-height:120px;")
                        label(for="event_name") Event Details
                    .input-field.col.s8.m7
                        input(type='text', id="fb_link" name="fbLink")
                        label(for="fb_link") Facebook Event Link
                .row
                    .input-field.col.s8.m4
                        select
                            option(value="" disabled=true selected=true) Choose your option
                            option(value="technical") Technical Events
                            option(value="workshops") Workshops
                            option(value="megaEvents") Mega Events
                            option(value="managerial") Managerial Events
                        label Select Category
                .row
                    .input-field.file-field.col.s8.m7
                        .btn.blue.darken-4.waves-effect.waves-light
                            span Photo
                            input(type="file")
                        .file-path-wrapper
                            input.file-path.validate(type="text")
                h6 Is the event a team event?
                .row
                    .col.s4.m2.l1
                        input.with-gap(name="is_team_event" type="radio" id="teamEvent" value="1")
                        label(for="teamEvent") Yes
                    .col.s4.m2.l1
                        input.with-gap(name="is_team_event" type="radio" id="indEvent" checked=true value="0")
                        label(for="indEvent") No
                .row#minPart.hidden
                    .input-field.col.s8.m4
                        select
                            option(value="" disabled=true selected=true) Choose your option
                            option(value="2") 2
                            option(value="3") 3
                            option(value="4") 4
                            option(value="5") 5
                        label Minimum Participants
                .row
                    .col.s12
                        //&nbsp; &nbsp;
                        button.btn.waves-effect.waves-light.blue.darken-4(type='submit', style="width: 200px;") Add
                            i.material-icons.prefix.right send

