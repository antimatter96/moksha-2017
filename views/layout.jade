    body
        ul.dropdown-content#profDrop
            li
                a(href="/users/details") Profile
            li.divider
            li
                a(href="/logout") Logout
        nav.z-depth-1.grey.darken-4
            div.nav-wrapper.black-text.container
                ul#slide-out.side-nav.white-text.grey.darken-4
                    li
                        if !login
                            a.modal-trigger(href="#loginModal") Login
                        else
                            a.dropdown-button(href="#!" data-activate="profDrop") Hello #{firstName}!
                                i.material-icons.white-text.right arrow_drop_down
                    li
                        a(href="/") Home
                    li
                        a(href="/events") Events
                    li
                        a(href="/contact") Contact Us
                    li
                        a(href="/about") About Us
                a.button-collapse(href="#" data-activates="slide-out")
                    i.material-icons.white-text menu
                a.brand-logo.white-text(href="/") innovision'16
                    img.left(src="/images/inno3.png")
                ul.right.hide-on-med-and-down.white-text
                    li
                        a(href="/") Home
                    li
                        a(href="/events") Events
                    li
                        a(href="/contact") Contact Us
                    li
                        a(href="/about") About Us
                    li
                        if ! login
                            a.modal-trigger(href="#loginModal") Login
                        else
                            a.dropdown-button(href="#!" data-activate="profDrop") Hello #{firstName}!
                                i.material-icons.white-text.right arrow_drop_down

        main
            block content

        footer.page-footer.grey.darken-4
            .container
                .row
                    .col.l6.s12
                        h5.white-text Follow Us On:
                        .container
                            .row.white-text
                                .col.s4 FB
                                .col.s4 Twitter
                                .col.s4 Google+
                    div.col.l4.offset-l2.s12
                        h5.white-text Site
                        ul
                            li
                                a.white-text(href="/events") Events
                            li
                                a.white-text(href="/login") Login
            div.footer-copyright
                div.container.white-text Â© 2016 Innovision, NSIT
                    a.grey-text.text-lighten-3.right(href="#") More Links

        #loginModal.modal
            .modal-content.center
                h4 Login
                .row
                    form.col.s12(role='form', action="/login", method="post")
                            .input-field.col.s8.offset-s2
                                input(type='text', id="email" name="email")
                                label(for="email") Email
                            .input-field.col.s8.offset-s2
                                input(type='password', id="password" name="password")
                                label(for="password") Password
                            button.btn.waves-effect.waves-light.blue.darken-4(type='submit', style="width: 200px;") Login
                form.row(role='form', action="/login/fb", method="get")
                    .col.s12.center-align.center
                        button.btn(type='submit')#fb
                            img(src='http://i.stack.imgur.com/ryt6L.png', style='max-width: 200px;')
                .row
                    .col.s12.center-align.center
                        a(href='/register')
                            button.btn.waves-effect.waves-light.blue.darken-4(style="width: 200px;") Register

    script(src='/javascripts/jquery.min.js')
    script(src='/javascripts/materialize.js')
    script.
        $(document).ready(function () {
            $('.parallax').parallax();
            $('.slider').slider({full_width: true});
            $('select').material_select();
            $('.modal-trigger').leanModal();
            $("input[name='is_team_event']").change(radioValueChanged);
            $(".dropdown-button").dropdown(function() {
                console.log("drop");
            });
        });
        function radioValueChanged() {
            radioValue = $(this).val();
            if ($(this).is(":checked") && radioValue == "1") {
                $('#minPart').toggleClass('hidden')
            }
            else {
                $('#minPart').toggleClass('hidden')
            }
        }
        // Initialize collapse button
        $(".button-collapse").sideNav();

