doctype html
html
    head
        title= "Innovision'16"
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        link(href='/stylesheets/materialize.min.css', rel='stylesheet', media='screen')
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(rel='manifest' href='/manifest.json')
        link(rel='stylesheet', href='/font/material\ icons/material-icons.css')
        link(rel='stylesheet', href='/font/intro/intro.css')
        link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Open+Sans:400,800,300', type='text/css')
        block style
        script.
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject'] = r;i[r]=i[r]||function(){
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
                    ga('create', 'UA-73588354-1', 'auto');
                    ga('send', 'pageview');
    body
        nav.z-depth-0.transparent
            div.nav-wrapper.white-text(style="padding: 8px 30px 0 30px;")
                a#menu.brand-logo.left(href="#" data-activates="slide-out")
                    i.material-icons.white-text menu
                a.brand-logo.white-text.right#nav-logo.hide-on-small-and-down(href="/")
                    img.right(src="/images/inno-white.png" style="margin-right:10px; margin-top:5px")
                ul#slide-out.side-nav.white-text
                    if !login
                        li.hide-on-small-and-down
                            a.modal-trigger(href="#loginModal") Login
                        li.hide-on-med-and-up
                            a(href="/login") Login
                    else
                        li#hello
                            ul.collapsible
                                li
                                    a.collapsible-header.waves-effect.waves-light.zero Hello #{firstName}!
                                        i.material-icons.white-text.right arrow_drop_down
                                    .collapsible-body
                                        ul
                                            li.white-text
                                                a(href="/users/details") Profile
                                            li.white-text
                                                a(href="/logout") Logout
                    li
                        a(href="/") Home
                    li
                        a(href="/events") Events
                    li
                        a(href="/contact") Contact Us
                    li
                        a(href="/about") About Us

        main
            block content

        footer.page-footer.transparent
            .container
                .row
                    .col.l6.s12
                        h5.white-text Follow Us On:
                        .container
                            .row.white-text
                                a(href="https://www.facebook.com/Innoitis")
                                    .col.s4 FB
                    div.col.l4.offset-l2.s12
                        h5.white-text Site
                        ul
                            li
                                a.white-text(href="/events") Events
                            li
                                a.white-text(href="/login") Login
            div.footer-copyright
                div.container.white-text Â© 2016 Innovision, NSIT
                    a.grey-text.text-lighten-3.right(href="#") More Links

        #loginModal.modal
            .modal-content.center
                h4 Login
                .row
                    form.col.s12(role='form', action="/login", method="post")
                            .input-field.col.s8.offset-s2
                                input(type='text', id="email" name="email")
                                label(for="email") Email
                            .input-field.col.s8.offset-s2
                                input(type='password', id="password" name="password")
                                label(for="password") Password
                            button.btn.waves-effect.waves-light(type='submit', style="width: 200px;") Login
                form.row(role='form', action="/login/fb", method="get")
                    .col.s12.center-align.center
                        button.btn(type='submit')#fb
                            img(src='http://i.stack.imgur.com/ryt6L.png', style='max-width: 200px;')
                .row
                    .col.s12.center-align.center
                        a(href='/register')
                            button.btn.waves-effect.waves-light(style="width: 200px;") Register

    script(src='/javascripts/jquery.min.js')
    script(src='/javascripts/materialize.js')
    script(src='/javascripts/push.js')
    block scripts
    script.
        $(document).ready(function () {
            $('.collapsible').collapsible({
                accordion: false // A setting that changes the collapsible behavior to expandable instead of the default accordion style
            });
            $('.parallax').parallax();
            $('.slider').slider({full_width: true});
            $('select').material_select();
            $('.modal-trigger').leanModal();
            // Initialize collapse button
            $("#menu").sideNav({
                edge: 'left', // Choose the horizontal origin
                closeOnClick: true // Closes side-nav on <a> clicks, useful for Angular/Meteor
            });
        });
